<div class="row">
	<div class="col-sm-6 col-sm-offset-3  marginTopBottom100">
		<%= simple_form_for @logo do |f| %>
			<%= f.input :title %>
			<%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>
			<%= f.button :submit, class: 'btn btn-default' %>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<% @logos.each do |logo| %>
			<%= image_tag(logo.image, class: 'logo') %>
			<%= link_to('Delete', logo, method: :delete, remote: true) %>
		<% end %>
	</div>
</div>
